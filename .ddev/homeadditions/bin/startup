#!/usr/bin/env bash
# $NODE_VER
{
  export NVM_DIR="$HOME/.nvm"
  [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
  useNodeVer="${NODE_VER}" || 16
  nodeVersions=$(nvm ls --no-alias --no-colors)
  if [ -z "$(echo $nodeVersions | grep v${useNodeVer})" ]; then
    nvm install ${useNodeVer} || true
  fi
  nvm use $useNodeVer
  nvm alias default $useNodeVer
  yarn config set cache-folder /mnt/ddev-global-cache/yarn || yarn config set cacheFolder /mnt/ddev-global-cache/yarn || true
  npm config set cache /mnt/ddev-global-cache/npm || true
  command -v replace >/dev/null 2>&1 || yarn global add replace
  grep -q "{{SITE_TITLE}}" README.md && replace "{{SITE_TITLE}}" "${SITE_TITLE}" ./README.md --silent || true
  git clone git@github.com:situationinteractive/satis.git ~/satis
  cp ~/satis/auth.json ~/.composer/
  rm -rf ~/satis
} >/dev/null 2>&1
