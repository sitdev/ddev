#!/bin/bash
# currentDirectory
# themesDirectory
# pluginsDirectory
# childThemes
# installYarn()
# SITE_NAME
# SITE_TITLE
# NODE_VER

export isProduction=$([[ ${1} == "production" ]] && echo '1')

export scriptRoot=$(cd "${BASH_SOURCE%/*}" && pwd)
source $scriptRoot/.utilities

if [ ! -z $SOFT_RESET ]; then
  find * -type d -path "node_modules/*situation*" -prune -exec rm -rf {} \;
  find * -type d -path "bower_components/set-design*" -prune -exec rm -rf {} \;
fi

for buildDir in $buildDirs; do
  cd ${buildDir}
  buildYarn
done

cd "${currentDirectory}"

if [ ! -z $SOFT_RESET ]; then
  rm -f .ddev/.updated
fi
