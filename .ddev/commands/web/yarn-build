#!/bin/bash
# currentDirectory
# themesDirectory
# pluginsDirectory
# childThemes
# installYarn()
# SITE_NAME
# SITE_TITLE
# NODE_VER

export isProduction=$([[ ${1} == "production" ]] && echo '1')

export scriptRoot=$(cd "${BASH_SOURCE%/*}" && pwd)
source $scriptRoot/.utilities
if [ -f webpack.config.js ]; then
  buildYarn
fi
for theme in $childThemes; do
  cd ${theme}
  buildYarn
done

cd "${currentDirectory}"
