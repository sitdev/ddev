#!/bin/bash

## Description: Run the yarn/webpack/gulp build.

# currentDirectory
# themesDirectory
# pluginsDirectory
# childThemes
# SITE_NAME
# SITE_TITLE
# NODE_VER

export scriptRoot=$(cd "${BASH_SOURCE%/*}" && pwd)
source $scriptRoot/.utilities

addLintScript() {
  if [[ $(jq '.devDependencies.prettier | length' package.json) = 0 ]]; then
    echo "Adding lint script to package.json"
    yarn add --dev --exact prettier
    jq --indent 4 '.scripts.lint |= "eslint --fix --ext .js $npm_package_theme_directory/assets/scripts; prettier --write $npm_package_theme_directory/assets/styles/**/*.scss"' package.json >package.json.tmp && mv package.json.tmp package.json
  fi
}

for buildDir in $buildDirs; do
  cd ${buildDir}
  if [ -f package.json ]; then
    if [ -f webpack.config.js ]; then
      addLintScript
      yarn lint
    fi
  fi
done

cd "${currentDirectory}"
